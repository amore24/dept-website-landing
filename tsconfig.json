{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}